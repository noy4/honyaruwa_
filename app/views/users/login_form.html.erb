<div class="login back">
  <div class="container">
    <div class="user-forms-box">
      <div class="user-forms-title">
        <h1>ログイン</h1>
      </div>
      <%= form_with(url: login_path, local: true) do |form| %>

        <div class="field">
          <%= form.label :email %>
          <%= form.email_field :email, id: :user_email %>
        </div>

        <div class="field">
          <%= form.label :password %>
          <%= form.password_field :password, id: :user_password %>
        </div>

        <% if @error_message %>
          <span class="error"><%= @error_message %></span>
        <% end %>

        <div class="users-actions">
          <%= form.submit "ログイン" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
