<div class="user-forms-box">
  <div class="user-forms-title">
    <h1>ユーザー登録</h1>
  </div>
  <%= form_with(model: user, local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :user_name %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, id: :user_email %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password %>
    </div>

    <div class="field">
      <%= form.label :password, "パスワードの確認" %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
    </div>

    <div class="form-errors">
      <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
    </div>

    <div class="users-actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
